<ul class="media-links media-links-rounded">
  <% if chapter.email? %>
    <%= mail_to chapter.email do %>
      <i class="fa fa-envelope"></i>
    <% end %>
  <% end %>

  <% if chapter.fb? %>
    <%= link_to "https://www.facebook.com/#{chapter.fb}" do %>
      <i class="fa fa-facebook"></i>
    <% end %>
  <% end %>

  <% if chapter.twitter? %>
    <%= link_to "https://twitter.com/#{chapter.twitter}" do %>
      <i class="fa fa-twitter"></i>
    <% end %>
  <% end %>

  <% if chapter.linkedin? %>
    <%= link_to linkedin_link(chapter.linkedin) do %>
      <i class="fa fa-linkedin"></i>
    <% end %>
  <% end %>

  <% if chapter.github? %>
    <%= link_to "https://www.github.com/#{chapter.github}" do %>
      <i class="fa fa-github-alt"></i>
    <% end %>
  <% end %>
</ul>
